<robot name="realomni">

    <link name="base_link">

    </link>

    <!-- Robot Footprint -->
    <link name="base_footprint"></link>

    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint" />
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
    </joint>
    
  <link name="base_odom">

  </link>
  <link name="omnicam_link"></link>

  <joint name="ocam_joint"
    type="fixed">
    <parent link="base_link" />
    <child link="omnicam_link" />
    <origin xyz="0.150 0 0" />
  </joint>

  <joint name="odom_joint"
    type="fixed">
    <parent link="base_odom" />
    <child link="base_link" />
    <origin xyz="0.3 0 0" />
    <!-- <origin xyz="0.1975 0 0" /> -->
  </joint>


  <link name="laser">

  </link>
    
  <joint
    name="lidar_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser" />
    <!-- <origin xyz="-0.40 0.20 0" rpy="3.14 0 2.0944" /> -->
    <origin xyz="-0.272 0.19 0" rpy="3.14 0 2.0944" />
  </joint>
</robot>